@page
@model DBFlightManagement.Pages.Flights.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<style>
    .search-container {
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .search-input {
        flex: 1;
        border: none;
        outline: none;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 14px;
    }

        .search-input::placeholder {
            color: #888;
        }

    .search-btn {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .search-btn:hover {
            background-color: #0056b3;
        }
</style>

<div class="search-container">
    <form method="get" style="width: 100%; display: flex; align-items: center;">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="search-input" placeholder="Search by Name, Address, Phone, or Email" />
        <button type="submit" class="search-btn">Search</button>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Airline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].DepartureAirport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].ArrivalAirport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].DepartureDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].TicketPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flight) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Airline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FlightId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FlightId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FlightId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
