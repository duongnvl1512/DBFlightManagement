@page
@model DBFlightManagement.Pages.Flights.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Airline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Airline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.DepartureAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.ArrivalAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.DepartureDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.DepartureDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.AvailableSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.AvailableSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.TicketPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.TicketPrice)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Flight.FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" id="back-list">Back to List</a>
    </form>
</div>
<style>
    body {
        background: linear-gradient(135deg, #1E90FF, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }
    h3{
        color: red;
    }
    h3, h4 {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: center;
        margin: 0 auto;
    }

    .row {
        margin-bottom: 15px;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-danger,
    #back-list {
        text-decoration: none;
        background-color: #F44336; /* Red for delete */
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    #back-list {
        background-color: #2F4F4F; /* Default color for back */
    }

    .btn-delete:hover {
        background-color: #D32F2F; /* Darker red */
        color: #FFFFFF;
    }

    #back-list:hover {
        background-color: #1E90FF; /* Highlight for back button */
        color: #FFFFFF;
    }
</style>
