@page
@model DBFlightManagement.Pages.Flights.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Flights </h1>

<h3>Are you sure you want to delete Flight information?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Airline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Airline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.DepartureAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.ArrivalAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.DepartureDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.DepartureDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.AvailableSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.AvailableSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.TicketPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.TicketPrice)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Flight.FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" id="back-list"> Back to List </a>
    </form>
</div>
<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: black;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    h3 {
        text-align: center;
        color: red;
    }

    .details-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: left;
        margin: 0 auto;
    }

    .row dd {
        margin-bottom: 20px;
        color: black;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    #back-list {
        text-decoration: none;
        background-color: #2F4F4F;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        margin-top: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    .btn-danger {
        text-decoration: none;
        background-color: red;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 8px 18px;
        margin-bottom: 8px;
        margin-top: 8px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    .btn-primary:hover,
    #back-list:hover {
        background-color: #1E90FF;
        color: #FFFFFF;
    }
</style>

