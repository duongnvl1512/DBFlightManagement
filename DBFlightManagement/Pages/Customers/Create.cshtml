@page
@model DBFlightManagement.Pages.Customers.CreateModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    // Hoặc Layout = "_Layout.cshtml" nếu file layout nằm ngay trong Pages
}

<h2>Create New Customer (Account)</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.FirstName" class="form-label"></label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.LastName" class="form-label"></label>
        <input asp-for="Input.LastName" class="form-control" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PersonalId" class="form-label"></label>
        <input asp-for="Input.PersonalId" class="form-control" />
        <span asp-validation-for="Input.PersonalId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PhoneNumber" class="form-label"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Address" class="form-label"></label>
        <input asp-for="Input.Address" class="form-control" />
        <span asp-validation-for="Input.Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 120vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        background-color: #2F4F4F;
        border: 2px solid #1E90FF;
        color: #FFFFFF;
        border-radius: 10px;
        font-size: 1rem;
        padding: 10px 15px;
        width: 100%;
    }

        .form-control:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 5px #4682B4;
        }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary,
    #back-list {
        width: 100%;
        text-decoration: none;
        background-color: #1E90FF;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    #back-list {
        background-color: #2F4F4F;
        margin-left: 575px;
    }

    .btn-delete:hover {
        background-color: #D32F2F;
        color: #FFFFFF;
    }

    #back-list:hover {
        background-color: #1E90FF;
        color: #FFFFFF;
    }
</style>