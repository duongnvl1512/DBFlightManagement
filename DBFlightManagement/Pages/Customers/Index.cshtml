@page
@model DBFlightManagement.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "";
}

<div>
    <a asp-page="Create" class="btn-create-new">Create New</a>
</div>

<div class="search-container">
    <form method="get" style="width: 100%; display: flex; align-items: center;">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="search-input" placeholder="Search by Email, First Name, Last Name, Phone,...." />
        <button type="submit" class="search-btn">Search</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn-action btn-edit">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn-action btn-details">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn-action btn-delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    body {
        background: linear-gradient(135deg, #1E90FF, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        color: #FFFFFF;
        margin-bottom: 20px;
    }

    .btn-create-new {
        margin-left: 100px;
        margin-bottom: 10px;
        display: inline-block;
        background-color: grey;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-create-new:hover {
            background-color: black;
            color: #FFFFFF;
        }

    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        gap: 10px;
    }

    a {
        color: white;
        text-decoration: none;
    }

    .search-input {
        padding: 10px;
        margin-left: 100px;
        border: 2px solid #1E90FF;
        border-radius: 5px;
        font-size: 1rem;
        width: 40%;
        background-color: #2F4F4F;
        color: #FFFFFF;
    }

        .search-input::placeholder {
            color: #B0C4DE;
        }

    .search-btn {
        background-color: #1E90FF;
        color: #FFFFFF;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .search-btn:hover {
            background-color: #4682B4;
        }

    .table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #2F4F4F;
        color: #FFFFFF;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #1E90FF;
            white-space: nowrap;
        }

        .table th {
            background-color: #1E90FF;
            color: #FFFFFF;
            font-size: 1.2rem;
        }

        .table tr:hover {
            background-color: #4682B4;
        }

    .action-buttons {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        flex-wrap: nowrap;
    }

    .btn-action {
        display: inline-block;
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        color: #FFFFFF;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #4CAF50;
    }

        .btn-edit:hover {
            background-color: #45A049;
            color: white;
        }

    .btn-details {
        background-color: #2196F3;
    }

        .btn-details:hover {
            background-color: #0B7DDB;
            color: white;
        }

    .btn-delete {
        background-color: #F44336;
    }

        .btn-delete:hover {
            background-color: #D32F2F;
            color: white;
        }

    .btn-buy {
        background-color: #FFC107;
    }

        .btn-buy:hover {
            background-color: #FFB300;
        }
</style>