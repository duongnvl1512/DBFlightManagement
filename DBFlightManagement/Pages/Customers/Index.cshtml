@page
@model DBFlightManagement.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Table of Customers</h1>

<p>
    <a asp-page="./Create" class="btn btn-success">Add New Customer</a>
</p>

<form method="get">
    <div class="form-group">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name, email, or ID..." />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PersonalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentityUser.Id)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-info btn-sm">Details</a>
                    <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 120vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        background-color: #2F4F4F;
        border: 2px solid #1E90FF;
        color: #FFFFFF;
        border-radius: 10px;
        font-size: 1rem;
        padding: 10px 15px;
        width: 100%;
    }

        .form-control:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 5px #4682B4;
        }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary,
    #back-list {
        width: 100%;
        text-decoration: none;
        background-color: #1E90FF;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    #back-list {
        background-color: #2F4F4F;
        margin-left: 575px;
    }

    .btn-delete:hover {
        background-color: #D32F2F;
        color: #FFFFFF;
    }

    #back-list:hover {
        background-color: #1E90FF;
        color: #FFFFFF;
    }
</style>