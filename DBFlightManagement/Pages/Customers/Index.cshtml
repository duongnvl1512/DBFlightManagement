@page
@model DBFlightManagement.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customer Management";
}

<h1>Customer Management</h1>

<!-- Create New Button Container -->
<div class="create-button-container">
    <a asp-page="Create" class="btn btn-success">Create New</a>
</div>

<!-- Add a container around the table to center it -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="action-buttons">
                        <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-primary">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-info">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Container for the page */
    .table-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    /* Table Styles */
    .table {
        width: 80%; /* Table width */
        max-width: 1200px;
        border-collapse: collapse;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .table th, .table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 1rem;
        vertical-align: middle;
    }

    .table th {
        background-color: #007bff;
        color: white;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .table tbody tr:hover {
        background-color: #e9ecef;
    }

    /* Hover Effect for Table Rows */
    .table tr:hover {
        background-color: #f1f1f1;
    }

    /* Action Links Styling in Table */
    .table a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .table a:hover {
        text-decoration: underline;
        background-color: #f0f0f0;
    }

    /* Container for the Create New button */
    .create-button-container {
        display: flex;
        justify-content: center;
        width: 100%;
        margin-top: 20px;
    }

    .btn-create {
        background-color: #28a745;
        color: white;
        padding: 12px 24px;
        font-size: 1.2rem;
        text-decoration: none;
        border-radius: 25px;
        transition: background-color 0.3s ease;
    }

    .btn-create:hover {
        background-color: #218838;
    }

    /* Action Buttons Styling */
    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        color: black;
    }

    /* Nút Edit (Primary) */
    .btn-primary {
        background-color: #4CAF50; /* Green */
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

    /* Nút Info (Light Blue) */
    .btn-info {
        background-color: #17a2b8; /* Light Blue */
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

    /* Nút Delete (Danger) */
    .btn-danger {
        background-color: #FF5733; /* Orange Red */
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

    /* Hover effect for buttons */
    .btn-primary:hover {
        background-color: #45a049;
        transform: scale(1.05);
    }

    .btn-info:hover {
        background-color: #138496;
        transform: scale(1.05);
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: scale(1.05);
    }

    /* Title and paragraph Styling */
    h1 {
        font-size: 2rem;
        color: #333;
        font-weight: bold;
        text-align: center;
    }

    p {
        font-size: 1.1rem;
        color: #666;
        margin-top: 15px;
    }
</style>
