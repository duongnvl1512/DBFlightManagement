@page
@model DBFlightManagement.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Table of Customers</h1>

<p>
    <a asp-page="./Create" class="btn btn-success">Add New Customer</a>
</p>

<form method="get">
    <div class="form-group">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name, email, or ID..." />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PersonalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Address)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Customer[0].IdentityUser)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td> *@
            <td>
                <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-info btn-sm">Details</a>
                <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
