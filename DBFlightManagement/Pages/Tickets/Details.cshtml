@page "{ticketId:int}"
@model DBFlightManagement.Pages.Tickets.DetailsModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Ticket Details</h2>

@if (Model.Ticket == null)
{
    <p>Ticket not found.</p>
}
else
{
    <p><strong>Ticket ID:</strong> @Model.Ticket.TicketId</p>
    <p><strong>Flight ID:</strong> @Model.Ticket.FlightId</p>
    <p><strong>Booked Date:</strong> @Model.Ticket.BookingDate</p>
    <p><strong>Seats Booked:</strong> @Model.Ticket.SeatBooked</p>
    <p><strong>Total Price:</strong> @Model.Ticket.TotalPrice</p>
    <p><strong>Payment Status:</strong> @(Model.Ticket.PaymentStatus ? "Paid" : "Unpaid")</p>
    <p><strong>Payment Method:</strong> @Model.Ticket.PaymentMethod</p>
}
<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .details-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: left;
        margin: 0 auto;
    }

    .row dd {
        margin-bottom: 20px;
        color: #FFFFFF;
    }

    a {
        color: white;
    }
</style>