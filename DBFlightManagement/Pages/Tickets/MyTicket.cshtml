@page
@model DBFlightManagement.Pages.Tickets.MyTicketsModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>My Tickets</h2>

@if (Model.Tickets == null || !Model.Tickets.Any())
{
    <p>You have not purchased any tickets yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ticket ID</th>
                <th>Flight</th>
                <th>Booking Date</th>
                <th>Seats</th>
                <th>Total Price</th>
                <th>Payment Status</th>
                <th>Payment Method</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>@ticket.TicketId</td>
                    <td>@ticket.FlightId</td>
                    <td>@ticket.BookingDate</td>
                    <td>@ticket.SeatBooked</td>
                    <td>@ticket.TotalPrice</td>
                    <td>@(ticket.PaymentStatus ? "Paid" : "Unpaid")</td>
                    <td>@ticket.PaymentMethod</td>
                </tr>
            }
        </tbody>
    </table>
}
<style>
    body {
        background: linear-gradient(135deg, #1E90FF, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        font-size: 2.5rem;
        color: #FFFFFF;
        margin: 20px 0;
    }

    .no-tickets {
        text-align: center;
        font-size: 1.5rem;
        color: #B0C4DE;
        margin-top: 30px;
    }

    .table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #2F4F4F;
        color: #FFFFFF;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #1E90FF;
            white-space: nowrap;
        }

        .table th {
            background-color: #1E90FF;
            color: #FFFFFF;
            font-size: 1.2rem;
        }

        .table tr:hover {
            background-color: #4682B4;
        }

        .table tr:nth-child(even) {
            background-color: #34495E;
        }

        .table td {
            font-size: 1rem;
        }

    .no-tickets {
        color: #FFCC00;
    }
</style>