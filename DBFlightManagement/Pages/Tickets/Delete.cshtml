@page
@model DBFlightManagement.Pages.Tickets.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div id="ticket-delete-container">
    <h4>Ticket</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="row">
                <!-- FlightId -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.FlightId)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.FlightId)</p>
                </div>

                <!-- CustomerId -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.CustomerId)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.CustomerId)</p>
                </div>

                <!-- BookingDate -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.BookingDate)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.BookingDate)</p>
                </div>

                <!-- SeatBooked -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.SeatBooked)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.SeatBooked)</p>
                </div>

                <!-- Sale -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.Sale)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.Sale)</p>
                </div>

                <!-- TotalPrice -->
                <div class="col-sm-12 mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Ticket.TotalPrice)</strong>
                    <p>@Html.DisplayFor(model => model.Ticket.TotalPrice)</p>
                </div>
            </dl>
        </div>
    </div>

    <!-- Delete Confirmation Form -->
    <div class="form-group mb-3">
        <form method="post">
            <input type="hidden" asp-for="Ticket.TicketId" />
            <input type="submit" value="Delete" class="btn btn-danger w-100" />
        </form>
    </div>

    <!-- Back to List Button -->
    <div class="form-group">
        <a asp-page="./Index" class="w-100 btn btn-lg btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Ticket Delete Page Container */
    #ticket-delete-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
    }

    /* Heading */
    h1, h4 {
        color: #333;
        font-weight: 600;
        text-align: center;
    }

    h3 {
        color: #dc3545;
        text-align: center;
        font-weight: bold;
    }
    /* Description List */
    dl.row {
        margin-top: 20px;
    }

    .col-sm-12 {
        margin-bottom: 15px;
    }

    dl {
        margin: 0;
    }

    strong {
        font-size: 1.1rem;
        color: #495057;
    }

    p {
        font-size: 1rem;
        color: #6c757d;
    }

    /* Button Styling */
    .btn {
        border-radius: 25px;
        padding: 12px;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Padding for the row and form to center */
    .col-md-4 {
        padding-left: 15px;
        padding-right: 15px;
    }

    /* Back to List Button Styling */
    a {
        font-size: 1rem;
        color: #ffffff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
