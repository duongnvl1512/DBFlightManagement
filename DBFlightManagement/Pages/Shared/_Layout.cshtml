<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DBFlightManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DBFlightManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Introduction">
                    <img src="~/lib/DBLOGO TRANSPARENT.png" alt="Logo" style="height: 60px; width: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Tickets/MyTicket">Booked Tickets</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Flights/Index">Flight</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Customers/Index">Customer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Staffs/Index">Staff</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    body {
        font-weight: 600;
        line-height: 1.6;
    }
    .navbar {
        background: linear-gradient(135deg, white, #2F4F4F);
        border-bottom: 2px solid #1E90FF;
        padding: 10px 15px;
    }

    .navbar-brand {
        font-size: 1.5rem;
        color: #FFFFFF !important;
        font-weight: bold;
    }

        .navbar-brand:hover {
            color: white !important;
        }

    .navbar-nav .nav-link {
        color: black !important;
        font-size: 1.2rem;
        padding: 10px 15px;
        transition: color 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            color: white !important;
        }

    .navbar-toggler {
        border-color: #1E90FF;
    }

    .navbar-toggler-icon {
        background-color: #1E90FF;
    }

    .navbar-collapse {
        justify-content: space-between;
    }
</style>
