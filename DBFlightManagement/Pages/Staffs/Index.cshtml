@page
@model DBFlightManagement.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Staff List</h1>

<a asp-page="./Create" class="btn btn-success">Add New Staff</a>

<form method="get">
    <div class="form-group">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name, email, or ID..." />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].PersonalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
             <td>
                 <a asp-page="./Details" asp-route-id="@item.StaffId" class="btn btn-info btn-sm">Details</a>
                 <a asp-page="./Edit" asp-route-id="@item.StaffId" class="btn btn-warning btn-sm">Edit</a>
                 <a asp-page="./Delete" asp-route-id="@item.StaffId" class="btn btn-danger btn-sm">Delete</a>
             </td>
        </tr>
}
    </tbody>
</table>
