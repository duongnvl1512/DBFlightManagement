@page
@model DBFlightManagement.Pages.Staffs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.StaffId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.AspNetUserId" class="control-label"></label>
                <select asp-for="Staff.AspNetUserId" class="form-control" asp-items="ViewBag.AspNetUserId"></select>
                <span asp-validation-for="Staff.AspNetUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.Email" class="control-label"></label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.FirstName" class="control-label"></label>
                <input asp-for="Staff.FirstName" class="form-control" />
                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.LastName" class="control-label"></label>
                <input asp-for="Staff.LastName" class="form-control" />
                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.PersonalId" class="control-label"></label>
                <input asp-for="Staff.PersonalId" class="form-control" />
                <span asp-validation-for="Staff.PersonalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PhoneNumber" class="control-label"></label>
                <input asp-for="Staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Address" class="control-label"></label>
                <input asp-for="Staff.Address" class="form-control" />
                <span asp-validation-for="Staff.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Staff.Position" class="control-label"></label>
                <input asp-for="Staff.Position" class="form-control" />
                <span asp-validation-for="Staff.Position" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-update" />
                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Page("./Index")'">Back to List</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: black;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .row {
        justify-content: center;
        align-items: center;
    }

    .form-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: center;
    }

    .form-floating {
        position: relative;
        margin-bottom: 15px;
        width: 100%;
    }

        .form-floating input {
            background-color: #2F4F4F;
            border: 2px solid #1E90FF;
            color: #FFFFFF;
            border-radius: 10px;
            font-size: 1rem;
            padding: 10px 15px;
            width: 100%;
        }

        .form-floating label {
            color: #B0C4DE;
            font-size: 1rem;
        }

    .form-control {
        background-color: #2F4F4F;
        border: 2px solid #1E90FF;
        color: #FFFFFF;
        border-radius: 10px;
        font-size: 1rem;
        padding: 15px;
        margin-top: 5px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .form-control:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 10px #4682B4;
        }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary,
    #back-list {
        width: 100%;
        text-decoration: none;
        background-color: #2F4F4F;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        margin-top: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    .btn-update {
        background-color: #3843d9;
    }

    #back-list {
        margin-left: 580px;
    }

        .btn-primary:hover,
        #back-list:hover {
            background-color: #1E90FF;
            color: #FFFFFF;
        }
</style>