@page
@model DBFlightManagement.Pages.Staffs.EditModel
@{
    ViewData["Title"] = "Edit Staff";
}

<h1>Edit Staff</h1>

<form method="post">
    <div class="form-group">
        <label for="Email" class="control-label">Email</label>
        <input id="Email" name="Email" class="form-control" value="@Model.Input.Email" readonly />
    </div>

    <div class="form-group">
        <label for="FirstName" class="control-label">First Name</label>
        <input id="FirstName" name="FirstName" class="form-control" value="@Model.Input.FirstName" placeholder="Enter first name" />
    </div>

    <div class="form-group">
        <label for="LastName" class="control-label">Last Name</label>
        <input id="LastName" name="LastName" class="form-control" value="@Model.Input.LastName" placeholder="Enter last name" />
    </div>

    <div class="form-group">
        <label for="PersonalId" class="control-label">Personal ID</label>
        <input id="PersonalId" name="PersonalId" class="form-control" value="@Model.Input.PersonalId" placeholder="Enter personal ID" />
    </div>

    <div class="form-group">
        <label for="PhoneNumber" class="control-label">Phone Number</label>
        <input id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.Input.PhoneNumber" placeholder="Enter phone number" />
    </div>

    <div class="form-group">
        <label for="Address" class="control-label">Address</label>
        <input id="Address" name="Address" class="form-control" value="@Model.Input.Address" placeholder="Enter address" />
    </div>

    <div class="form-group">
        <label for="Position" class="control-label">Position</label>
        <input id="Position" name="Position" class="form-control" value="@Model.Input.Position" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="./Index" class="btn btn-secondary">Cancel</a>
</form>
<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        margin: 0 auto;
    }

    .form-control {
        background-color: #2F4F4F;
        border: 2px solid #1E90FF;
        color: #FFFFFF;
        border-radius: 10px;
        font-size: 1rem;
        padding: 15px;
        margin-top: 5px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .form-control:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 10px #4682B4;
        }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary, .btn-secondary,
    #back-list {
        width: auto;
        text-decoration: none;
        background-color: #2F4F4F;
        color: #FFFFFF;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        margin-top: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

        .btn-primary:hover,
        #back-list:hover {
            background-color: #1E90FF;
            color: #FFFFFF;
        }
</style>
