<div>
    <button type="button" class="button-update" onclick="window.location.href='@Url.Page("./Edit", new { id = Model.Staff.StaffId })'">Edit</button>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Page("./Index")'">Back to List</button>
</div>

<style>
    body {
        background: linear-gradient(135deg, white, #2F4F4F);
        color: black;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .button-update {
        text-decoration: none;
        background-color: #ebeb34;
        color: black;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        margin-bottom: 10px;
        margin-top: 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .details-container {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        width: 50%;
        text-align: left;
        margin: 0 auto;
    }

    .row dd {
        margin-bottom: 20px;
        color: black;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary,
    #back-list {
