@page
@model DBFlightManagement.Pages.Staffs.DeleteModel
@{
    ViewData["Title"] = "Delete Staff";
}

<h1>Delete Staff</h1>

<h3>Are you sure you want to delete this staff member?</h3>
<div>
    <h4>Staff</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.Email
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.LastName
        </dd>
        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.Position
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Staff.StaffId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
