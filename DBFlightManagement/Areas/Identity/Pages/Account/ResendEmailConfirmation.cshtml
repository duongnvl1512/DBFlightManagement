@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" >
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
            </div>
            <div>
                <button id="back-home" onclick="window.location.href='/'">Back to Home</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    body {
        background: linear-gradient(135deg, #1E90FF, #2F4F4F);
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        color: #FFFFFF;
        margin-bottom: 20px;
    }

    h2 {
        text-align: center;
        font-size: 1.8rem;
        color: #B0C4DE;
        margin-bottom: 20px;
    }

    .row {
        background-color: rgba(47, 79, 79, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        justify-content: center;
        align-items: center;
    }

    .form-control {
        background-color: #2F4F4F;
        border: 2px solid #1E90FF;
        color: #FFFFFF;
        border-radius: 10px;
        font-size: 1.6rem;
        padding: 15px;
        margin-top: 5px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .form-control:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 10px #4682B4;
        }

    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
        transition: all 0.3s ease;
        font-size: 1.4rem;
        padding: 15px 20px;
    }

        .btn-primary:hover {
            background-color: #4682B4;
            border-color: #4682B4;
        }

    #back-home {
        margin-top: 20px;
        margin-left: 100px;
        background-color: #2F4F4F;
        color: #FFFFFF;
        border: none;
        border-radius: 5px;
        padding: 15px 20px;
        font-size: 1.4rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        display: block;
        text-align: center;
    }

        #back-home:hover {
            background-color: #1E90FF;
        }

    hr {
        border: 0;
        height: 1px;
        background: #1E90FF;
        margin-bottom: 30px;
    }
</style>