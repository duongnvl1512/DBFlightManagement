@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

        .login-container h1 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

    .welcome-message {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 1rem;
        color: #007bff;
    }


    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating input {
            height: 50px;
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;
            box-sizing: border-box;
        }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            font-size: 0.9rem;
            color: #888;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .form-floating input:focus + label,
        .form-floating input:not(:placeholder-shown) + label {
            top: 10px;
            left: 10px;
            font-size: 0.75rem;
            color: #007bff;
        }

    .checkbox {
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

        .checkbox input {
            margin-right: 0.5rem;
        }

    .btn-primary {
        background: #007bff;
        color: #fff;
        font-size: 1rem;
        padding: 10px;
        border: none;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .btn-secondary {
        background: #6c757d;
        color: #fff;
        font-size: 1rem;
        padding: 10px;
        border: none;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s ease;
        margin-top: 1rem;
    }

        .btn-secondary:hover {
            background: #5a6268;
        }

    .login-links {
        margin-top: 1rem;
    }

        .login-links a {
            color: #007bff;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .login-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <p class="welcome-message">Welcome to DBFlightManagement</p>
    <h1>@ViewData["Title"]</h1>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox">
            <input asp-for="Input.RememberMe" id="remember-me" />
            <label asp-for="Input.RememberMe" class="form-label" for="remember-me">Remember me</label>
        </div>
        <button type="submit" class="btn-primary">Log in</button>
    </form>
    <button onclick="location.href='/Index'" class="btn-secondary">Back to Home</button>
    <div class="login-links">
        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
        <p> <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> </p>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
